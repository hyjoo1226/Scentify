package com.ssafy.scentify.home.model.dto;

import lombok.Data;

public class HomeDto {
	import java.util.List;

	@Data
	public class HomeResponseDto {
	    private UserDto user;
	    private List<Integer> deviceIds;
	    private DeviceDto mainDevice;
	    private List<AutoScheduleDto> autoSchedules;
	    private List<CustomScheduleDto> customSchedules;
	}

	
	
	@Data
	public static class UserHomeDto {
	    private String nickName;
	    private int imgNum;
	    private int mainDeviceId;
	}
	
	@Data
	public static class DeviceHomeDto {
	    private int id;
	    private String name;
	    private int groupId;
	    private int slot1;
	    private int slot1RemainingRatio;
	    private int slot2;
	    private int slot2RemainingRatio;
	    private int slot3;
	    private int slot3RemainingRatio;
	    private int slot4;
	    private int slot4RemainingRatio;
	    private int mode;
	    private int temperature;
	    private int humidity;
	    private int defaultCombination;
	}
	
	@Data
	public static class AutoScheduleHomeDto {
	    private int id;
	    private int combinationId;
	    private Integer subMode; 
	    private Integer type;    
	    private int modeOn;
	}
	
	@Data
	public static class CustomScheduleHomeDto {
	    private int id;
	    private String name;
	    private int combinationId;
	    private String combinationName;
	    private int isFavorite;
	    private int day;
	    private String startTime;
	    private String endTime;
	    private int interval;
	}
}
